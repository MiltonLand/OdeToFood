@page
@model OdeToFood1.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group mb-3">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <div class="input-group-append">
                <button class="btn btn-secondary">
                    <i class="bi bi-search d-flex justify-content-center"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Restaurants)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.Location</td>
                <td>@r.Cuisine</td>
                <td>
                    <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@r.Id"><i class="bi bi-zoom-in d-flex justify-content-center"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>@Model.Message</div>