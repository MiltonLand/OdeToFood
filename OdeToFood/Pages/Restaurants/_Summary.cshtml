@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="bi bi-zoom-in d-flex justify-content-center"></i></a>
        <a class="btn btn-info" asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="bi bi-pencil d-flex justify-content-center"></i></a>
        <a class="btn btn-info" asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="bi bi-trash d-flex justify-content-center"></i></a>
    </div>
</div>
